<% include partials/header.ejs %>
<h1>The Posts Page</h1> 
<hr>

<h3>Posts:</h3>
<% for(var i = 0; i < posts.length; i++) { %>
        <li><strong><%= posts[i].title %></strong> - <em><%= posts[i].author %></em>.</li>
<% } %>

<h3>Comments:</h3>
<% comments.forEach(function(comment) { %>
    <li><em><%= comment.author %> says</em>: "<%= comment.message %>"</li>
<% }); %>

